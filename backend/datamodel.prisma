enum Permission {
  ADMIN
  USER
  ITEMCREATE
  ITEMUPDATE
  ITEMDELETE
  PERMISSIONUPDATE
}

type User {
  id: ID! @id
  name: String!
  email: String! @unique
  password: String!
  resetToken: String
  resetTokenExpiry: Float
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  permissions: [Permission!]! @scalarList(strategy: RELATION)
  cart: [CartItem!]!
}

type Item {
  id: ID! @id
  title: String!
  description: String!
  image: String
  largeImage: String
  price: Int!
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  user: User! @relation(link: INLINE)
}

type CartItem {
  id: ID! @id
  quantity: Int @default(value: 1)
  item: Item! @relation(link: INLINE)
  user: User! @relation(link: INLINE)
}
